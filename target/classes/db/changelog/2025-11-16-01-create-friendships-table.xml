<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="01-create-friendships-table" author="beksultan">
        <createTable tableName="friendships">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id_initiator" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="user_id_target" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
        </createTable>

        <addUniqueConstraint
                columnNames="user_id_initiator, user_id_target"
                constraintName="uc_friendships_user_ids"
                tableName="friendships"/>

    </changeSet>
</databaseChangeLog>